{
    "env": {
        "browser": true,
        "es2022": true,
        "webextensions": true
    },
    "globals": {
        "__EXTENSION_VERSION__": "readonly",
        "__EXTENSION_MV2__": "readonly",
        "__EXTENSION_MV3__": "readonly",
        "__EXTENSION_DEBUG_PRINTS__": "readonly"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 13,
        "tsconfigRootDir": ".",
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-underscore-dangle": "off",
        "no-console": "off",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-plusplus": "off",
        "max-len": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "off"
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "@typescript-eslint/ban-ts-comment": "warn"
    }
}